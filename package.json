{
    "name": "vscode-vault",
    "version": "1.1.0",
    "publisher": "owenfarrell",
    "engines": {
        "vscode": "^1.29.1"
    },
    "license": "MIT",
    "displayName": "Vault",
    "description": "Manages interactions with HashiCorp Vault",
    "categories": [
        "Other"
    ],
    "keywords": [
        "HashiCorp",
        "Vault",
        "Secret",
        "Password"
    ],
    "homepage": "https://github.com/owenfarrell/vscode-vault/",
    "bugs": {
        "url": "https://github.com/owenfarrell/vscode-vault/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/owenfarrell/vscode-vault.git"
    },
    "galleryBanner": {},
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Vault Configuration",
            "properties": {
                "vault.trustedAuthorities": {
                    "type": "array",
                    "description": "A set of trusted authorities for which strict SSL checking will be skipped.",
                    "items": {
                        "description": "The hostname and port of a trusted Vault service",
                        "type": "string"
                    }
                },
                "vault.clipboardTimeout": {
                    "type": "number",
                    "default": 60,
                    "description": "Specifies the amount of time (in seconds) for which a copied value will be available on the clipboard."
                }
            }
        },
        "commands": [
            {
                "command": "vault.browse",
                "title": "Browse Path",
                "category": "Vault"
            },
            {
                "command": "vault.connect",
                "title": "Connect to Server",
                "category": "Vault",
                "icon": {
                    "light": "resources/light/add.svg",
                    "dark": "resources/dark/add.svg"
                }
            },
            {
                "command": "vault.delete",
                "title": "Delete Secret",
                "category": "Vault"
            },
            {
                "command": "vault.list",
                "title": "Refresh",
                "category": "Vault",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "vault.read",
                "title": "Read Secret",
                "category": "Vault"
            },
            {
                "command": "vault.write",
                "title": "Write Secret",
                "category": "Vault",
                "icon": {
                    "light": "resources/light/edit.svg",
                    "dark": "resources/dark/edit.svg"
                }
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "vault.browse",
                    "when": "false"
                },
                {
                    "command": "vault.delete",
                    "when": "false"
                },
                {
                    "command": "vault.list",
                    "when": "false"
                },
                {
                    "command": "vault.read",
                    "when": "false"
                },
                {
                    "command": "vault.write",
                    "when": "false"
                }
            ],
            "view/item/context": [
                {
                    "command": "vault.browse",
                    "when": "view == vaultSecrets && viewItem == server"
                },
                {
                    "command": "vault.delete",
                    "when": "view == vaultSecrets && viewItem == secret"
                },
                {
                    "command": "vault.list",
                    "when": "view == vaultSecrets && viewItem != secret"
                },
                {
                    "command": "vault.read",
                    "when": "view == vaultSecrets && viewItem == secret"
                },
                {
                    "command": "vault.write",
                    "when": "view == vaultSecrets && viewItem != server"
                }
            ],
            "view/title": [
                {
                    "command": "vault.connect",
                    "group": "navigation"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "vaultSecrets",
                    "name": "Vaults"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "vaultSecrets",
                "contents": "\nYou are not connected to any Vaults.\n\n[Add Vault](command:vault.connect)"
            }
        ]
    },
    "activationEvents": [
        "onCommand:vault.connect",
        "onCommand:vault.delete",
        "onCommand:vault.list",
        "onCommand:vault.read",
        "onCommand:vault.write"
    ],
    "badges": [],
    "markdown": "github",
    "dependencies": {
        "clipboardy": "^1.2.3",
        "flat": "^4.1.0",
        "http-status-codes": "^1.4.0",
        "node-vault": "0.9.13",
        "validator": "^13.0.0",
        "vscode-uri": "^1.0.8"
    },
    "devDependencies": {
        "@types/clipboardy": "^1.1.0",
        "@types/flat": "^5.0.0",
        "@types/mocha": "^5.2.7",
        "@types/node": "^10.17.18",
        "@types/validator": "^13.0.0",
        "@types/vscode": "^1.29.1",
        "@typescript-eslint/eslint-plugin": "^2.31.0",
        "@typescript-eslint/parser": "^2.31.0",
        "ajv": "^6.9.1",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "mocha": "^5.2.0",
        "ts-loader": "^6.2.2",
        "typescript": "^3.8.3",
        "vsce": "^1.74.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "scripts": {
        "build": "vsce package",
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode development --watch",
        "webpack": "webpack --mode development"
    },
    "icon": "icon.png"
}
